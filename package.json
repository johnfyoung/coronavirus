{
  "name": "mernstarter",
  "version": "1.0.0",
  "description": "MERN Starter kit",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*' --exec npm run server\" \"npm run client\"",
    "server": "babel-node server.js",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "John Young",
  "license": "ISC",
  "repository": "github:johnfyoung/mernstarter",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "express-useragent": "^1.0.13",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.11",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "uuid": "^3.3.3",
    "validator": "^11.1.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.6",
    "winston": "^3.2.1",
    "winston-mongodb": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "concurrently": "^4.1.1",
    "eslint-plugin-prettier": "^3.1.0",
    "if-env": "^1.0.4",
    "prettier": "^1.18.2"
  }
}
