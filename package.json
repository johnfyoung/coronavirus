{
    "name": "mernstarter",
    "version": "1.0.0",
    "description": "MERN Starter kit",
    "main": "server.js",
    "scripts": {
        "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
        "start:prod": "node server.js",
        "start:dev": "concurrently \"nodemon --ignore 'client/*' --exec npm run server\" \"npm run client\"",
        "server": "babel-node server.js",
        "client": "cd client && npm run start",
        "install": "cd client && npm install",
        "build": "cd client && npm run build",
        "heroku-postbuild": "npm run build",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "John Young",
    "license": "ISC",
    "repository": "github:johnfyoung/mernstarter",
    "dependencies": {
        "express": "^4.17.1",
        "nodemon": "^1.19.1",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.6"
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/node": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-react": "^7.0.0",
        "babel-loader": "^8.0.5",
        "concurrently": "^4.1.1",
        "eslint-plugin-prettier": "^3.1.0",
        "if-env": "^1.0.4",
        "prettier": "^1.18.2"
    }
}
